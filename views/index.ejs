<%- include('./partials/header_public') %>

    <div class="row m-0">

        <!-- SIDEBAR -->
        <div class="col-12 col-md-2 p-0 h-100" id="sidebar">
            <%- include('./partials/navbar_public') %>
        </div>
        <!-- END SIDEBAR -->

        <div class="col-12 col-md-10 h-100 p-3">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% articles.forEach(article=> { %>
                    <div class="col">
                        <div class="card border-0 shadow">
                            <img src="https://images.unsplash.com/photo-1519337265831-281ec6cc8514?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80"
                                class="card-img-top" alt="...">
                            <div class="card-body">
                                <span class="badge bg-primary mb-3">
                                    <%= article.category.title %>
                                </span>
                                <a href="/<%= article.slug %>" class="fs-4 float-end text-dark" data-bs-toggle="tooltip" data-bs-placement="top"
                                    title="Ler publicação">
                                    <i class='bx bx-glasses-alt'></i>
                                </a>
                                <h5 class="card-title">
                                    <%= article.title %>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

    </div>

    <%- include('./partials/footer_public') %>