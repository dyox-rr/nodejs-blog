<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>

        <div class="container">

            <div class="row mt-4 d-flex justify-content-center">
                <div class="col-12 col-md-10 col-lg-9">
                    <h2 class="d-flex align-items-center">Categorias
                        <a href="/admin/categories/new" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Nova categoria" class="text-success fs-5 mt-2 mx-2">
                            <i class='bx bx-plus'></i>
                        </a>
                    </h2>
                </div>
            </div>

            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-10 col-lg-9">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Código</th>
                                <th scope="col">Nome</th>
                                <th scope="col">Opções</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% categories.forEach(category=> { %>
                                <tr>
                                    <th>
                                        <%= category.id %>
                                    </th>
                                    <td>
                                        <%= category.title %>
                                    </td>
                                    <td class="d-flex">
                                        <a href="/admin/categories/edit/<%= category.id %> " class="btn btn-primary btn-sm">
                                            <i class="bx bx-pencil"></i>
                                        </a>
                                        <form action="/admin/categories/destroy" method="POST" class="mx-1" onsubmit="category__confirm__destroy(event, this)">
                                            <input type="hidden" name="id" value="<%= category.id %> ">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include('../../partials/footer') %>
        